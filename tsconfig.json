{
    "compilerOptions": {
        "composite": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "target": "ES2021",
        "useDefineForClassFields": true,
        "lib": ["ES2021", "DOM", "DOM.Iterable", "dom", "esnext"],
        "module": "ESNext",
        "skipLibCheck": true,
        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "preserve",
        /* Linting */
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": true,
        /* Custom */
        "paths": {
            "@/*": ["./*"]
        },
        "allowJs": true,
        "incremental": true,
        "esModuleInterop": true,
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "include": [
        "next-env.d.ts",
        ".next/types/**/*.ts",
        "**/*.ts",
        "**/*.tsx",
        "./app/lib/utils.ts",
        "refreshToken.js",
        "./components/**/*.tsx"
    ],
    "exclude": ["node_modules"]
}
